        "//vendor/k8s.io/apimachinery/pkg/runtime/serializer:go_default_library",
    ],
)

go_test(
    name = "go_default_test",
    srcs = ["metaonly_test.go"],
    library = ":go_default_library",
    deps = [
        "//pkg/api/install:go_default_library",
