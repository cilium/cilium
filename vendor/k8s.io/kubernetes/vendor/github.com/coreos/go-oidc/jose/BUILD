load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "claims.go",
        "doc.go",
        "jose.go",
        "jwk.go",
        "jws.go",
        "jwt.go",
        "sig.go",
        "sig_rsa.go",
    ],
    visibility = ["//visibility:public"],
)

