all: push

TAG = e2e
PREFIX = gcr.io/google_containers/redis-install-3.2.0

container:
	docker build --pull -t $(PREFIX):$(TAG) .

push: container
	gcloud docker -- push $(PREFIX):$(TAG)

clean:
	docker rmi $(PREFIX):$(TAG)
