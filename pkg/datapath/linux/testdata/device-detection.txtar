-- devices_veth_unselected.table --
Name     Selected   Type
lo       false      device
veth1    false      veth
veth0    false      veth

-- devices_veth_selected.table --
Name     Selected   Type
lo       false      device
veth1    false      veth
veth0    true       veth

-- devices_bond.table --
Name     Selected   Type
lo       false      device
veth1    false      veth
veth0    false      veth
bond0    true       bond

-- devices_bridge.table --
Name     Selected   Type
lo       false      device
veth1    false      veth
