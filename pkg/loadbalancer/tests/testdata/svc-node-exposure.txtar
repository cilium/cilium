apiVersion: v1
kind: Service
metadata:
  name: echo
  namespace: test
  annotations:
    service.cilium.io/node: foo
spec:
  clusterIP: 10.96.50.104
  clusterIPs:
  - 10.96.50.104
  ports:
  - name: http
    port: 80
    protocol: TCP
    targetPort: 80
  selector:
    name: echo
  type: ClusterIP

