-- lrp-addr.yaml --
apiVersion: "cilium.io/v2"
kind: CiliumLocalRedirectPolicy
metadata:
  name: "lrp-addr"
  namespace: test
spec:
  redirectFrontend:
    addressMatcher:
      ip: "169.254.169.254"
      toPorts:
        - port: "5050"
          name: "test"
          protocol: TCP
        - port: "5051"
          name: "test1"
          protocol: TCP
  redirectBackend:
    localEndpointSelector:
      matchLabels:
        app: proxy
    toPorts:
      - port: "50"
        name: "test"
        protocol: TCP
      - port: "51"
        name: "test1"
        protocol: TCP

