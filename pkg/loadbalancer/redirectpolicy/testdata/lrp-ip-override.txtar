-- lrp-addr.yaml --
apiVersion: "cilium.io/v2"
kind: CiliumLocalRedirectPolicy
metadata:
  name: "lrp-addr"
  namespace: test
spec:
  redirectFrontend:
    addressMatcher:
      ip: "169.254.169.254"
      toPorts:
        - port: "5050"
          name: "test"
          protocol: TCP
          overrideIP: 1.1.1.1
        - port: "5051"
          name: "test1"
          protocol: TCP
          overrideIP: 1.1.1.2
  redirectBackend:
    localEndpointSelector:
      matchLabels:
        app: proxy
    toPorts:
      - port: "50"
        name: "test"
        protocol: TCP
        overrideIP: 1.1.1.3
      - port: "51"
        name: "test1"
        protocol: TCP
        overrideIP: 1.1.1.4

-- pod.yaml --
apiVersion: v1
kind: Pod
metadata:
  name: lrp-pod
  namespace: test
  labels:
    app: proxy
spec:
  containers:
    - name: lrp-pod
      image: nginx
      ports:
        - containerPort: 50
          name: test
          protocol: TCP
        - containerPort: 51
          name: test1
          protocol: TCP
  nodeName: testnode
status:
  hostIP: 172.19.0.3
  hostIPs:
