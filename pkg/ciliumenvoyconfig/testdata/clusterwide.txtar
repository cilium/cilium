-- ccec.yaml --
apiVersion: cilium.io/v2
kind: CiliumClusterwideEnvoyConfig
metadata:
  name: envoy-lb-listener-2
spec:
  services:
    - name: echo2
      namespace: test
  resources:
    - "@type": type.googleapis.com/envoy.config.listener.v3.Listener
      name: envoy-lb-listener-2

-- service.yaml --
apiVersion: v1
kind: Service
metadata:
  name: echo2
  namespace: test
  uid: a49fe99c-3564-4754-acc4-780f2331a49b
spec:
  clusterIP: 10.96.50.104
  clusterIPs:
  - 10.96.50.104
  ports:
  - name: http
    nodePort: 30781
    port: 80
    protocol: TCP
    targetPort: 80
  selector:
    name: echo2
  type: NodePort
status:
  loadBalancer: {}

-- endpointslice.yaml --
