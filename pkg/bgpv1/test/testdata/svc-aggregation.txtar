  - 10.96.50.101
  - 2001:db8:fd00::101
  externalIPs:
  - 10.10.10.1
  - fd00:aa:bb::1
  externalTrafficPolicy: Cluster
  internalTrafficPolicy: Cluster
  ipFamilies:
  - IPv4
  - IPv6
  ipFamilyPolicy: DualStack
  ports:
