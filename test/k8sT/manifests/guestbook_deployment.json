{
    "kind":"ReplicationController",
    "apiVersion":"v1",
    "metadata":{
        "name":"redis-master",
        "labels":{
            "k8s-app.guestbook":"redis",
            "role":"master"
        }
    },
    "spec":{
        "replicas":1,
        "selector":{
            "k8s-app.guestbook":"redis",
            "role":"master"
        },
        "template":{
            "metadata":{
                "labels":{
                    "k8s-app.guestbook":"redis",
                    "role":"master",
                    "zgroup": "guestbook"
                }
            },
            "spec":{
                "containers":[{
                    "name":"redis-master",
                    "image":"redis",
                    "ports":[{
                        "name":"redis-server",
                        "containerPort":6379
                    }]
                }],
                "nodeSelector": {
                    "kubernetes.io/hostname": "k8s1"
                }
            }
        }
    }
}
{
    "kind":"Service",
    "apiVersion":"v1",
    "metadata":{
        "name":"redis-master",
        "labels":{
            "k8s-app.guestbook":"redis",
            "role":"master",
            "zgroup": "guestbook"
        }
    },
    "spec":{
        "ports": [{
            "port":6379,
            "targetPort":"redis-server"
        }],
        "selector":{
            "k8s-app.guestbook":"redis",
            "role":"master"
        }
    }
}
