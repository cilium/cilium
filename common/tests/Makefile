include ../../Makefile.defs

all: perf-event-test bpf/bpf-event-test.o

perf-event-test: perf-event-test.go
	go build -o $@ $<

bpf/bpf-event-test.o: bpf/bpf-event-test.c
	clang -I../../bpf/include -O2 -emit-llvm -D__NR_CPUS__=$(shell nproc) -c $< -o - | llc -march=bpf -filetype=obj -o $@

clean:
	rm -f bpf/bpf-event-test.o perf-event-test
