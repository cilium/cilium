{
    "kind":"ReplicationController",
    "apiVersion":"v1",
    "metadata":{
        "name":"redis-leader",
        "labels":{
            "k8s-app.guestbook":"redis",
            "role":"leader"
        }
    },
    "spec":{
        "replicas":1,
        "selector":{
            "k8s-app.guestbook":"redis",
            "role":"leader"
        },
        "template":{
            "metadata":{
                "labels":{
                    "k8s-app.guestbook":"redis",
                    "role":"leader"
                }
            },
            "spec":{
                "containers":[{
                    "name":"redis-leader",
                    "image":"docker.io/redis:6.0.5",
                    "ports":[{
                        "name":"redis-server",
                        "containerPort":6379
                    }]
                }]
            }
        }
    }
}
