{
    "kind":"ReplicationController",
    "apiVersion":"v1",
    "metadata":{
        "name":"redis-slave",
        "labels":{
            "k8s-app.guestbook":"redis",
            "role":"slave"
        }
    },
    "spec":{
        "replicas":1,
        "selector":{
            "k8s-app.guestbook":"redis",
            "role":"slave"
        },
        "template":{
            "metadata":{
                "labels":{
                    "k8s-app.guestbook":"redis",
                    "role":"slave"
                }
            },
            "spec":{
                "containers":[{
                    "name":"redis-slave",
                    "image":"docker.io/library/redis:4.0.1",
                    "command": ["redis-server","--loglevel","verbose","--slaveof","redis-master","6379"],
                    "ports":[{
                        "name":"redis-server",
                        "containerPort":6379
                    }]
                }]
            }
        }
    }
}
