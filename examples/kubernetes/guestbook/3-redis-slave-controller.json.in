{
    "kind":"ReplicationController",
    "apiVersion":"v1",
    "metadata":{
        "name":"redis-slave",
        "labels":{
            "app":"redis",
            "role":"slave"
        }
    },
    "spec":{
        "replicas":1,
        "selector":{
            "app":"redis",
            "role":"slave",
            "io.cilium.lizards.type": "db"
        },
        "template":{
            "metadata":{
                "labels":{
                    "app":"redis",
                    "role":"slave",
                    "io.cilium.lizards.type": "db"
                }
            },
            "spec":{
                "containers":[{
                    "name":"redis-slave",
                    "image":"gcr.io/google_samples/gb-redisslave:v1",
                    "ports":[{
                        "name":"redis-server",
                        "containerPort":6379
                    }],
                    "volumeMounts":[{
                        "name": "resolver",
                        "mountPath": "/etc/resolv.conf",
                        "readOnly": true
                    }]
                }],
                "volumes":[{
                    "name": "resolver",
                    "hostPath":{
                        "path": "${RESOLV_FILE}"
                    }}
                ]
            }
        }
    }
}
