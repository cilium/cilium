{
  "apiVersion": "experimental.kubernetes.io/v1",
  "kind": "NetworkPolicy",
  "metadata": {
    "annotations": {
      "io.cilium.name": "admin",
      "io.cilium.parent": "io.cilium"
    },
    "name": "admin-policy"
  },
  "spec": {
    "podSelector": {
      "matchLabels": {
        "kube-system": ""
      }
    },
    "ingress": [
      {
        "from": [
          {
            "podSelector": {
              "matchLabels": {
                "$host": ""
              }
            }
          },
          {
            "podSelector": {
              "matchLabels": {
                "io.cilium.lizards.web": "",
                "io.kubernetes.pod.namespace": "default"
              }
            }
          },
          {
            "namespaceSelector": {
              "matchLabels": {
                "kube-system": ""
              }
            }
          }
        ]
      }
    ]
  }
}
