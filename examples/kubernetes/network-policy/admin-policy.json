{
  "apiVersion": "extensions/v1beta1",
  "kind": "NetworkPolicy",
  "metadata": {
    "annotations": {
      "io.cilium.name": "admin",
      "io.cilium.parent": "io.cilium"
    },
    "name": "admin-policy"
  },
  "spec": {
    "podSelector": {
      "matchLabels": {
        "kube-system": ""
      }
    },
    "ingress": [
      {
        "from": [
//         // This section is not valid anymore because of the $. The "reserved:host"
//         // doesn't work either.
//         // [A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]
//          {
//            "podSelector": {
//              "matchLabels": {
//                "$host": ""
//              }
//            }
//          },
          {
            "podSelector": {
              "matchLabels": {
                "io.cilium.lizards.web": "",
                "io.kubernetes.pod.namespace": "default"
              }
            }
          },
          {
            "namespaceSelector": {
              "matchLabels": {
                "kube-system": ""
              }
            }
          }
        ]
      }
    ]
  }
}
